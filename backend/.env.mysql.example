# MySQL Configuration Template
# Copy this to .env and configure your settings

# Database Selection
DATABASE_TYPE=mysql  # or mongodb

# MongoDB Configuration (existing)
MONGODB_URI=mongodb://127.0.0.1:27017/website_tanijuu

# MySQL Configuration (new)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=website_tanijuu_mysql
MYSQL_PORT=3306

# Server Configuration
PORT=5001
NODE_ENV=development

# File Upload
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=uploads

